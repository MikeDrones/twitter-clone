  gem 'sqlite3'
  gem 'factory_girl_rails'
  gem 'rspec-rails'
  gem 'rspec'
  gem 'faker'
  gem 'populator'
end

group :test do
  gem 'shoulda-matchers'
  gem 'shoulda-callback-matchers'
end

group :production do
  gem 'pg'
  gem 'unicorn'
end

